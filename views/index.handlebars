{{!-- build the body --}}
{{!-- use below as a template for burgers --}}



<div class="container">

    <div class="row">
        <div class="col-md-12">
            <img id="burger-image" src="/assets/img/cute_burger.jpg" alt="">
            <h3 id="header-text">Eat Da Burger</h3>
        </div>
    </div>

    {{!-- side by side row for un-devoured and devoured burgers --}}
    <div class="row">
        {{!-- yet to be devoured --}}
        <div class="col-md-6">
           <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        {{> burgers/burgers-display devoured=false}}
                    {{/if}}
                    {{!-- <li>
                    <p>{{this.id}}. {{this.burger_name}}</p>
                    </li> --}}
                {{/each}}
            </ul>

        </div>

        {{!-- devoured burgers --}}
        <div class="col-md-6">
            {{#each burgers}}
                {{#unless devoured}}
                    {{> burgers/burgers-display devoured=true}}
                {{/unless}}
                {{!-- <li>
                <p>ID: {{this.id}}</p>
                <p>Burger: {{this.burger_name}}</p>
                </li> --}}
            {{/each}}
        </div>
    </div>

    {{!-- form to input new burgers --}}
    <div class="row" id="add-burger-form">
        <div class="col-md-12">
            <h2>Create a new burger</h2>
                <form class="create-form">

                <div class="form-group">
                    <label for="burg">Burger Name:</label>
                    <input type="text" id="burg" name="name">
                </div>

                <button type="submit">Add Burger</button>
                </form>
        </div>
    </div>

</div>